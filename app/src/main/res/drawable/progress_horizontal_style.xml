<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/progress_background_1"
                android:centerY="0.75"
                android:endColor="@color/progress_background_1"
                android:startColor="@color/progress_background_1" />

            <stroke
                android:width="0.5dip"
                android:color="@color/progress_background_2" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/progress_second_1"
                    android:centerY="0.75"
                    android:endColor="@color/progress_second_2"
                    android:startColor="@color/progress_second_1" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/progress"
                    android:centerY="0.75"
                    android:endColor="@color/progress"
                    android:startColor="@color/progress" />
            </shape>
        </clip>
    </item>
</layer-list>